{
  "name": "tfm-plataforma",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:shell": "npm --workspace app-shell run dev",
    "dev:registro": "npm --workspace registro run dev",
    "dev:all": "npm-run-all -p dev:registro dev:shell",
    "build": "npm --workspace registro run build && npm --workspace app-shell run build"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/webpack-env": "^1.18.8",
    "autoprefixer": "^10.4.21",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@material-tailwind/react": "^2.1.10",
    "clsx": "^2.1.1",
    "heroicons": "github:tailwindlabs/heroicons",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  }
}
